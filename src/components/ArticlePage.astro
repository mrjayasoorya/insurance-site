---
import { siteData } from "src/content/siteData";
import { buildJsonLd, buildMeta, canonicalFromPath } from "src/lib/seo";

const { brand, post, slug } = Astro.props;

const canonical = canonicalFromPath(siteData.brand.websiteUrl, `/en/insights/${slug}/`);
const meta = buildMeta({
  title: `${post.seoTitle} | ${siteData.brand.name}`,
  description: post.seoDesc,
  canonical,
  ogType: "article",
});

const jsonLd = buildJsonLd({
  pageType: "post",
  siteData,
  canonical,
  title: meta.title,
  description: meta.description,
  breadcrumbs: [
    { name: "Home", href: canonicalFromPath(siteData.brand.websiteUrl, "/en/") },
    { name: "Insights", href: canonicalFromPath(siteData.brand.websiteUrl, "/en/insights/") },
    { name: post.h1 || slug, href: canonical },
  ],
  faqs: (post.faqs || []).slice(0, 10),
  extraNodes: [
    {
      "@type": "Article",
      "@id": `${canonical}#article`,
      headline: post.h1 || post.seoTitle,
      description: post.seoDesc,
      mainEntityOfPage: canonical,
      author: { "@type": "Organization", name: siteData.brand.name },
      publisher: { "@type": "Organization", name: siteData.brand.name },
    },
  ],
});
---

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link rel="stylesheet" href="/styles/theme.css" />

                  <title>{meta.title}</title>
  <meta name="description" content={meta.description} />
  <link rel="canonical" href={meta.canonical} />
  {Object.entries(meta.tags).map(([k,v]) => <meta property={k} content={v} />)}
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
</head>

<section class="section section-padding">
  <header>
    <p class="muted readable">{post.section}</p>
    <h1 class="section-title">{post.h1}</h1>
    <p class="section-sub">{post.intro}</p>
  </header>
</section>

{post.blocks?.map((b) => (
  <section class="section section-padding" aria-label={b.title}>
    <h2 class="section-title">{b.title}</h2>
    <ul class="bullets">
      {b.bullets.map((x) => <li>{x}</li>)}
    </ul>
  </section>
))}

{post.localSignals?.length ? (
  <section class="section section-padding" aria-label="Local signals">
    <h2 class="section-title">Local service signals</h2>
    <p class="muted readable">{post.localSignals.join(" â€¢ ")}</p>
  </section>
) : null}

{post.faqs?.length ? (
  <section class="section section-padding" aria-label="FAQs">
    <h2 class="section-title">FAQs</h2>
    <div class="grid grid-1">
      {post.faqs.map((f) => (
        <article class="card">
          <h3 class="card-title">{f.q}</h3>
          <p class="card-desc">{f.a}</p>
        </article>
      ))}
    </div>
  </section>
) : null}
