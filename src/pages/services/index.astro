---
import ServiceLayout from "../../layouts/ServiceLayout.astro";
import PageHero from "../../components/PageHero.astro";
import LinkGrid from "../../components/LinkGrid.astro";
import { hubs } from "../../content/pages/hubs";
import { servicePages } from "../../content/pages/services";
import { siteData } from "../../content/siteData";

const hub = hubs.services;

const breadcrumbItems = [
  { label: "Home", href: "/" },
  { label: "Services", href: "/services" },
];

const services = Object.values(servicePages).map((s) => ({
  title: s.h1,
  desc: s.metaDesc,
  href: s.href,
  chips: [s.serviceType],
}));
---

<ServiceLayout page={{...hub, serviceType:"Service Hub", areasServed: siteData.brand.areaChips, faqs: [] }} breadcrumbItems={breadcrumbItems}>
  <PageHero
    h1={hub.h1}
    subtitle={hub.metaDesc}
    chips={hub.intro}
    primaryCta={{ label: "Call for Guidance", href: `tel:${siteData.brand.phoneE164}` }}
    secondaryCta={{ label: "WhatsApp", href: `https://wa.me/${siteData.brand.whatsappE164}?text=${encodeURIComponent(siteData.brand.whatsappPrefill)}`, target:"_blank", rel:"noopener" }}
  />

  <LinkGrid
    title="Choose the service that matches your situation"
    subtitle="Each page is written for decision clarity (not generic theory)."
    items={services}
  />
</ServiceLayout>
