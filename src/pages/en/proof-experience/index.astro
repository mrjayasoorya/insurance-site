---
export const prerender = true;

import ServiceLayout from "../../../layouts/ServiceLayout.astro";
import PageHero from "../../../components/PageHero.astro";
import LinkGrid from "../../../components/LinkGrid.astro";
import Breadcrumbs from "../../../components/Breadcrumbs.astro";

import { hubs } from "../../../content/pages/hubs";
import { servicePages } from "../../../content/pages/services";
import { siteData } from "../../../content/siteData";

const hub = hubs.services;

const breadcrumbItems = [
  { label: "Home", href: "/en/" },
  { label: "Services", href: "/en/services/" },
];

const items = Object.values(servicePages).map((p) => ({
  title: p.h1,
  desc: p.metaDesc,
  href: p.href,
  chips: [p.serviceType],
}));
---

<ServiceLayout page={{ ...hub, serviceType: "Service Hub", areasServed: siteData.brand.areaChips, faqs: [] }} breadcrumbItems={breadcrumbItems}>
  <section class="section section-padding">
    <Breadcrumbs items={breadcrumbItems} />
  </section>

  <PageHero
    h1={hub.h1}
    subtitle={hub.metaDesc}
    chips={hub.intro}
    primaryCta={{ label: "Call", href: `tel:${siteData.brand.phoneE164}` }}
    secondaryCta={{
      label: "WhatsApp",
      href: `https://wa.me/${siteData.brand.whatsappE164}?text=${encodeURIComponent(siteData.brand.whatsappPrefill)}`,
      target: "_blank",
      rel: "noopener",
    }}
  />

  <LinkGrid
    title="Pick the service page that matches your need"
    subtitle="Each page is written for Chennai outskirts risk zones (NH + industrial belts)."
    items={items}
  />
</ServiceLayout>
