              <h2 id="cta-checklist-title" class="cta-title">{ctas.proofChecklist?.title || "Get your Claim-Ready Checklist (free)"}</h2>
              <p class="cta-sub">{ctas.proofChecklist?.subtitle || "A simple checklist for documents and proof discipline."}</p>

              {ctas.proofChecklist?.bullets?.length ? (
                <ul class="bullets">
                  {ctas.proofChecklist.bullets.map((b) => <li>{b}</li>)}
                </ul>
              ) : null}

