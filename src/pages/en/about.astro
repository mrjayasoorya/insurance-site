              <p class="cta-note">
                No lead resale. No spam. You speak directly to a licensed expert.
              </p>

              <!-- ContactPoint microdata -->
              <!-- <div itemscope itemtype="https://schema.org/ContactPoint" class="sr-only">
                <meta itemprop="contactType" content={ctas.primary?.microdataName || "Primary Contact"} />
                <meta itemprop="telephone" content={brand.phoneE164 || brand.phone} />
                <meta itemprop="availableLanguage" content={langsCsv} />
                <meta itemprop="url" content={canonical} />
              </div> -->
            </div>
          </section>

          <!-- Pillars -->
          <section class="section section-padding" aria-labelledby="pillars-title">
            <h2 id="pillars-title" class="section-title">What you get from us (clear and practical)</h2>
            <ul class="area-rows" role="list" aria-label="Value pillars">
              {(aboutPage.valuePillars || []).map((p) => (
                <li class="area-row">
                  <h3 class="area-name">{p.title}</h3>
